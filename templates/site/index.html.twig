{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="row">
    {% for site in sites %}
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-header text-center pt-4 pb-3">
                    <span class="badge rounded-pill bg-light text-dark">Subksrybcja do {{ site.createdAt|date('Y-m-d') }}</span>
                    <h2 class="font-weight-bold mt-2">
                        {{ site.name }}
                    </h2>
                </div>
                <div class="card-body text-lg-left text-center pt-0">
                    <div class="text-center">
                        {{ site.url }}
                    </div>
                    <a href="{{ path('app_site_show', {'siteId' : site.id}) }}" class="btn btn-icon bg-gradient-primary d-lg-block mt-3 mb-0">
                        Otw√≥rz
                        <i class="fas fa-arrow-right ms-1" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
